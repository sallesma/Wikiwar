<div class="page-title">
  <h1><%=t :login_title %></h1>
</div>

<div class="section">
  <%= form_for @user, :as => :user, :url => login_path do |f| %>
    <p>
      <%= f.label :pseudo %><br />
      <%= f.text_field :pseudo %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.check_box :remember_me %>
      <%= f.label t(:login_remember_me) %>
    </p>
    <p class="button"><%= submit_tag t(:login_submit) %></p>
    <p>
      <%= link_to t(:login_forgot_password), :forgot_password %>
    </p>
  <% end %>
</div>