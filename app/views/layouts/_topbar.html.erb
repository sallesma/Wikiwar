   <header class="navbar navbar-inverse" role="banner">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" id="menu-toggler">
                <span class="sr-only">Toggle navigation</span>
                <span class="fa fa-bar"></span>
                <span class="fa fa-bar"></span>
                <span class="fa fa-bar"></span>
            </button>
            <a class="navbar-brand" href="/">
                <%= image_tag("logo.png") %>
            </a>
        </div>
        <ul class="nav navbar-nav pull-right hidden-xs">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle hidden-xs hidden-sm" data-toggle="dropdown">
                    <%=t :menu_language %>
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li class="settings hidden-xs hidden-sm">
                        <%= link_to(t(:menu_english), url_for( :locale => 'en' )) %>
                    </li>
                    <li class="settings hidden-xs hidden-sm">
                        <%= link_to(t(:menu_french), url_for( :locale => 'fr' )) %>
                    </li>
                </ul>
            </li>
            <% if current_user %>
                <% if current_user.challenges_received_pending_or_accepted.any? %>
                <li class="notification-dropdown hidden-xs hidden-sm">
                    <a href="#" class="trigger">
                        <i class="fa fa-warning"></i>
                        <span class="count"><%= current_user.challenges_received_pending_or_accepted.count %></span>
                    </a>
                    <div class="pop-dialog">
                        <div class="pointer right">
                            <div class="arrow"></div>
                            <div class="arrow_border"></div>
                        </div>
                        <div class="body">
                            <a href="#" class="close-icon"><i class="icon-remove-sign"></i></a>
                            <div class="notifications">
                                <h3><%=t :menu_requests %></h3>
                                <% current_user.challenges_received_pending_or_accepted.first(6).each do |challenge| %>
                                    <%= link_to multiplayer_path, class: "item" do %>
                                        <i class="fa fa-gamepad"></i>
                                        <%= challenge.sender.pseudo %>
                                        <span class="time"><i class="fa fa-clock-o"></i>
                                            <%= challenge.created_at.to_s(:short) %>
                                        </span>
                                    </a>
                                    <% end %>
                                <% end %>
                                <div class="footer">
                                    <%= link_to t(:menu_requests_all), multiplayer_path, class: "logout"%>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                <% end %>
                <li class="user-area">
                    <%= image_tag current_user.gravatar_url(default: "identicon"), :class => "gravatar img-circle" %>
                    <div class="pseudo ellipsis hidden-xs hidden-sm" title="<%= current_user.pseudo %>">
                        <%= current_user.pseudo %>
                    </div>
                </li>
                <li class="settings hidden-xs hidden-sm">
                    <%= link_to(
                          content_tag(:i, nil, class: 'fa fa-sign-out'),
                          logout_path, 
                          data: { confirm: t(:are_you_sure) } 
                        ) 
                    %>
                </li>
            <% else %>
                <li class="settings hidden-xs hidden-sm">
                    <%= link_to t(:sign_up_title), signup_path %>
                </li>
                <li class="settings hidden-xs hidden-sm">
                    <%= link_to t(:login_title), login_path %>
                </li>
            <% end %>
        </ul>
    </header>