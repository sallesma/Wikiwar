<div class="page-title">
  <h1><%=t :singleplayer_review_title %></h1>
</div>

<div class="section">
  <p>
    <strong><%= t :singleplayer_from %></strong>
    <%= @game.from %>
    <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="right" title="<%= strip_tags @game.from_desc %>"></i>
  </p>
  <p>
    <strong><%= t :singleplayer_to %></strong>
    <%= @game.to %>
    <i class="fa fa-question-circle" data-toggle="tooltip" data-placement="right" title="<%= strip_tags @game.to_desc %>"></i>
  </p>
  <p>
    <strong><%=t :singleplayer_started_at %></strong>
    <%= @game.created_at.to_s(:long_date) %>
  </p>
  <p>
    <strong><%=t :singleplayer_duration %></strong>
    <%= @game.duration %> <%=t :statistics_sec %>
  </p>
</div>

<div id="game-details" class="section">
    <h3><%=t :singleplayer_details %></h3>
    <p>
        <strong><%=t :singleplayer_steps %></strong>
        <span id="steps"><%= @game.steps %></span>
    </p>
    <strong><%=t :singleplayer_history %></strong>
    <ul id="game-history">
        <% @game.articles.each do |article| %>
          <li><%= article.title %></li>
        <% end %>
    </ul>
</div>