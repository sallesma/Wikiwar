<h1><%=t :password_reset_title %></h1>
<%= form_for @user, :as => :user, :url => password_reset_path, :method => :put do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2><%=t :form_invalid %></h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= @user.pseudo %> has requested a password reset. Please enter your new password:
  </p>
  <p>
    <%= f.label t(:password_reset_new_password) %><br/>
    <%= f.password_field :new_password %>
  </p>
  <p>
    <%= f.hidden_field :pseudo %>
    <%= f.label t(:password_reset_new_password_confirmation) %><br/>
    <%= f.password_field :new_password_confirmation %>
  </p>
  <p>
    <%= f.submit t(:password_reset_submit) %>
  </p>
<% end %>