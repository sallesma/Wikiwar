<h1><%=t :password_forgot_title %></h1>
<%= form_for @user, :as => :user, :url => forgot_password_path, :method => :put do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2><%=t :form_invalid %></h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label 'email:' %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit t(:password_forgot_submit) %>
  </p>
<% end %>